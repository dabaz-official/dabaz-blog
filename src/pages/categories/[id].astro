---
import CategoryPosts from "../../layouts/CategoryPosts.astro";

export function getStaticPaths() {
  const categories = [
    {
      id: 'primer',
      name: 'Primer'
    },
    {
      id: 'dev-basics',
      name: 'Dev Basics'
    },
    {
      id: 'web-basics',
      name: 'Web Basics'
    }
  ]
  return categories.map(({ id, name }) => {
    return {
      params: { id },
      props: { name }
    }
  })
}

const { name } = Astro.props

---

<CategoryPosts category={name} />